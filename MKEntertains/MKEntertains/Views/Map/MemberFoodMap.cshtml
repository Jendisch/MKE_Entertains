@model IEnumerable<FoodDrinkDataAccess.Deal>
@using System.Collections.Generic;
@using Newtonsoft.Json;

@{
    ViewBag.Title = DateTime.Now.DayOfWeek.ToString();
    ViewBag.DayPlusOne = DateTime.Now.AddDays(1).DayOfWeek.ToString();
    ViewBag.DayPlusTwo = DateTime.Now.AddDays(2).DayOfWeek.ToString();
    ViewBag.DayPlusThree = DateTime.Now.AddDays(3).DayOfWeek.ToString();
    ViewBag.DayPlusFour = DateTime.Now.AddDays(4).DayOfWeek.ToString();
    ViewBag.DayPlusFive = DateTime.Now.AddDays(5).DayOfWeek.ToString();
    ViewBag.DayPlusSix = DateTime.Now.AddDays(6).DayOfWeek.ToString();
    ViewBag.DayPlusSeven = DateTime.Now.AddDays(7).DayOfWeek.ToString();
}


<meta charset="UTF-8">
<title>MKEnterains</title>

<meta name="description" content="Entertainment Application">
<meta name="keywords" content="MKE Milwaukee Entertainment">
<meta name="author" content="Jendisch">

<style>
    #map {
        height: 700px;
        width: 900px;
        border: 5px solid #697075;
        border-radius: 10px;
        /*margin: 50px;
             padding-top: 30px;*/
    }

    .homeText {
        color: white;
    }
</style>

<div class="homeText">
    <br />
    <h2>It's a @ViewBag.Title night.</h2>

    @if (ViewBag.Title == "Saturday" || ViewBag.Title == "Sunday")
    {
        <h3>We focus on week day fun here! Click around below to check out deals on a future day.</h3>
    }
    else
    {
        <h3>Where to eat or grab a drink on a budget? You Decide.</h3>
    }
</div>
    <br />
    <center>
        <h3>Take a Look Ahead</h3>
        <div>
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusOne" onclick="location.href='@Url.Action("FoodMapDayPlusOne", "Map")'" />
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusTwo" onclick="location.href='@Url.Action("FoodMapDayPlusTwo", "Map")'" />
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusThree" onclick="location.href='@Url.Action("FoodMapDayPlusThree", "Map")'" />
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusFour" onclick="location.href='@Url.Action("FoodMapDayPlusFour", "Map")'" />
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusFive" onclick="location.href='@Url.Action("FoodMapDayPlusFive", "Map")'" />
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusSix" onclick="location.href='@Url.Action("FoodMapDayPlusSix", "Map")'" />
            <input type="button" class="btn btn-default" value="@ViewBag.DayPlusSeven" onclick="location.href='@Url.Action("FoodMapDayPlusSeven", "Map")'" />
        </div>
    </center>
    <br />
    <div align="right">
        @Html.ActionLink("Toggle To Entertainment Map", "MemberEntertainmentMap", "Map", new { @class = "btn btn-primary" })
    </div>
    <br />

    @if (ViewBag.Title == "Saturday" || ViewBag.Title == "Sunday")
    {
        <div></div>
    }
    else
    {
        <center><div id="map"></div></center>

        foreach (var item in Model)
        {
            <div class="modal fade" id="myModal-@(item.Id)" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                            <center>
                                <h2 class="modal-title" id="myModalLabel">@item.Location.Name</h2>
                            </center>
                        </div>
                        <div class="modal-body">
                            <center>
                                <h3>
                                    @item.TimeConstraint
                                    <br />
                                    @item.Deal1
                                </h3>
                                <h4>
                                    @item.Location.StreetAddress<br />
                                    @item.Location.City, @item.Location.State @item.Location.ZipCode
                                    <br />
                                    Phone Number: @item.Location.PhoneNumber
                                </h4>
                            </center>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }





    

<script>
    var jsonInfo = @Html.Raw(JsonConvert.SerializeObject(Model, Formatting.Indented,
                            new JsonSerializerSettings
                            {
                                ReferenceLoopHandling = ReferenceLoopHandling.Ignore
                            }));

        function initMap() {

            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                //center: { lat: 43.034, lng: -87.911 }
            });

            infoWindow = new google.maps.InfoWindow;
            if (navigator.geolocation)
            {
                var location_timeout = setTimeout("geolocFail()", 10000);
                navigator.geolocation.getCurrentPosition(function(position) {
                    clearTimeout(location_timeout);
                    var pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude
                    };

                    infoWindow.setPosition(pos);
                    map.setCenter(pos);
                }, function() {
                    handleLocationError(true, infoWindow, map.getCenter());
                });
            }
            else {
                // Browser doesn't support Geolocation
                handleLocationError(false, infoWindow, map.getCenter());
            }

            function handleLocationError(browserHasGeolocation, infoWindow, pos) {
                infoWindow.setPosition(pos);
                infoWindow.setContent(browserHasGeolocation ?
                                      'Error: The Geolocation service failed.' :
                                      'Error: Your browser doesn\'t support geolocation.');
                infoWindow.open(map);
            }

            var latlong = [];
            var title = [];
            var address = [];
            for (var i = 0; i < jsonInfo.length-1; i++)
            {
                latlong.push(new google.maps.LatLng(jsonInfo[i].Location.Latitude, jsonInfo[i].Location.Longitude));
                title.push(jsonInfo[i].Location.Name);
                address.push(jsonInfo[i].Location.StreetAddress + jsonInfo[i].Location.City + jsonInfo[i].Location.State, + jsonInfo[i].Location.ZipCode);

                var marker = new google.maps.Marker({
                    position: latlong[i],
                    map: map,
                    title: title[i]
                });
                marker.DealId = jsonInfo[i].Id;
                function markerClicked(e) {
                    console.log(this);
                    console.log('Marker ' + this.DealId + ' has been clicked');
                    $('#myModal-' + this.DealId).modal('show');

                }
                google.maps.event.addListener(marker, 'click', markerClicked);
            }
        }

</script>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB75pBB0awnpqlNbscw8mhSvoRJdnIIQEA&callback=initMap"
        async defer></script>

